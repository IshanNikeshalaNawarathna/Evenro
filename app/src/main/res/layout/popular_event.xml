<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/popular_event_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="@string/event_details_title_name"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/popular_event_button"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="155dp" />

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popular_event_name"
        app:srcCompat="@drawable/baseline_calendar" />

    <TextView
        android:id="@+id/popular_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="@string/event_details_date"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView38"
        app:layout_constraintStart_toEndOf="@+id/imageView38"
        app:layout_constraintTop_toTopOf="@+id/imageView38" />

    <ImageView
        android:id="@+id/imageView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/popular_event_date"
        app:layout_constraintEnd_toStartOf="@+id/popular_event_location"
        app:layout_constraintTop_toTopOf="@+id/popular_event_date"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/baseline_location" />

    <TextView
        android:id="@+id/popular_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semi_bold"
        android:gravity="end"
        android:text="@string/event_detail_view_location_button"
        android:textColor="@color/main_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView39" />

    <Button
        android:id="@+id/popular_event_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:backgroundTint="@color/button_color"
        android:padding="2dp"
        android:text="@string/item_button"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/popular_event_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/popular_event_name" />

    <ImageView
        android:id="@+id/imageView40"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@color/back_button"
        android:backgroundTint="@color/back_button"
        android:tint="#FCF5FD"
        app:layout_constraintBottom_toTopOf="@+id/popular_event_name"
        app:layout_constraintEnd_toEndOf="@+id/popular_event_button"
        app:layout_constraintStart_toStartOf="@+id/popular_event_name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_shape" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/popular_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imageView40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView40"
        app:layout_constraintTop_toTopOf="@+id/imageView40"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:srcCompat="@drawable/imgs" />


</androidx.constraintlayout.widget.ConstraintLayout>