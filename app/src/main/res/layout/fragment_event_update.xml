<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/update_event_constran_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EventUpdateFragment">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="@string/update_event"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edite_event_date"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custome_input"
        android:backgroundTint="@color/back_button"
        android:ems="10"
        android:hint="@string/input_plaesholder8"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:state_enabled="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/pick_date_button"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <EditText
        android:id="@+id/edite_event_time"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custome_input"
        android:backgroundTint="@color/back_button"
        android:ems="10"
        android:hint="@string/input_plaesholder12"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:state_enabled="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView24"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edite_event_qty"
        app:layout_constraintTop_toBottomOf="@+id/edite_event_qty" />

    <Spinner
        android:id="@+id/location_spinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custome_input"
        android:backgroundTint="@color/back_button"
        app:layout_constraintEnd_toEndOf="@+id/edite_event_time"
        app:layout_constraintStart_toStartOf="@+id/edite_event_time"
        app:layout_constraintTop_toBottomOf="@+id/edite_event_time" />

    <ImageView
        android:id="@+id/pick_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_calendar"
        app:layout_constraintBottom_toBottomOf="@+id/edite_event_date"
        app:layout_constraintEnd_toEndOf="@+id/textView22"
        app:layout_constraintTop_toTopOf="@+id/edite_event_date" />

    <EditText
        android:id="@+id/edite_event_qty"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custome_input"
        android:backgroundTint="@color/back_button"
        android:ems="10"
        android:hint="@string/input_plaesholder9"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:state_enabled="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView24"
        app:layout_constraintStart_toStartOf="@+id/edite_event_date"
        app:layout_constraintTop_toBottomOf="@+id/edite_event_date" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_access_time"
        android:tint="@color/main_color"
        app:layout_constraintBottom_toBottomOf="@+id/edite_event_qty"
        app:layout_constraintEnd_toEndOf="@+id/pick_date_button"
        app:layout_constraintTop_toTopOf="@+id/edite_event_qty" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/button_color"
        android:fontFamily="@font/inter_semi_bold"
        android:text="@string/upgrate_event"
        android:textColor="@color/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/location_spinner"
        app:layout_constraintStart_toStartOf="@+id/location_spinner"
        app:layout_constraintTop_toBottomOf="@+id/location_spinner" />
</androidx.constraintlayout.widget.ConstraintLayout>